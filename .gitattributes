# Handle line endings automatically
* text=auto

# Ignore Ninja build logs
*.ninja_log

# Explicitly set text files
*.cpp text
*.h text
*.hpp text
*.txt text
*.cmake text
*.md text

# Binary files
*.png binary
*.jpg binary
*.exe binary
*.dll binary
*.lib binary
*.pdb binary

# Prevent diffing on build files
*.obj binary
*.o binary
*.ilk binary
*.ipch binary
